def Current_to_Past():
    customer_file = open("Tenant.txt", "r")
    customer_records = customer_file.readlines()

    record = 0
    for line in customer_records:
        print("[", (record + 1), "]", line.strip())
        record += 1

    record_num = int(input("Enter list number you wanted to edit: "))

    customer_details = customer_records[record_num - 1]
    while True:
        with open("PastTenantDetails.txt", "a") as fhandler:
            fhandler.write(customer_details)
            fhandler.write("\n")
        fhandler.close()

    print("Changes has been updated")

    while True:
        print("[1]Continue to move current tenant details \n[2]Back to Modify"
              "\n[3]Back to admin Homepage")

        choice = input("Choose an option: ")

        if choice == '1':
            Current_to_Past()

        elif choice == '2':
            modify()

        elif choice == '3':
            admin_homepage()

        else:
            print("Invalid Option")


def search():
    print("\n[1]Press 1 to Search details of Apartment \n[2]Press 2 to search details of Tenant "
          "\n[3]Press 3 to go back")

    choice = input("Choose your option: ")

    if choice == '1':
        search_apartment()

    elif choice == '2':
        search_tenant()

    elif choice == '3':
        admin_homepage()

    else:
        print("Invalid Option")
        search()


def search_apartment():
    search_data = input("Please enter the keyword you want to search: ")

    apartment_file = open("Apartment.txt", "r")
    for apartmentnumber in apartment_file:
        if search_data in apartmentnumber:
            apartmentnumber = apartmentnumber.strip()
            value = apartmentnumber.split(",")

            if search_data == value[0]:
                print("-------------------------------------------------------")
                print("\nApartment Number: ", value[0])
                print("\nSquare Footage of Apartment: ", value[1])
                print("\nExpected Rental of the Apartment Unit: ", value[2])
                print("\nDate of Acquisition: ", value[3])
                print("\nPreviously Rented Tenant: ", value[4])
                print("\nCurrent Tenant: ", value[5])
                print("\nPayment: ", value[6])
                print("-------------------------------------------------------")

            elif search_data == value[1]:
                print("-------------------------------------------------------")
                print("\nApartment Number: ", value[0])
                print("\nSquare Footage of Apartment: ", value[1])
                print("\nExpected Rental of the Apartment Unit: ", value[2])
                print("\nDate of Acquisition: ", value[3])
                print("\nPreviously Rented Tenant: ", value[4])
                print("\nCurrent Tenant: ", value[5])
                print("\nPayment: ", value[6])
                print("-------------------------------------------------------")

            elif search_data == value[2]:
                print("-------------------------------------------------------")
                print("\nApartment Number: ", value[0])
                print("\nSquare Footage of Apartment: ", value[1])
                print("\nExpected Rental of the Apartment Unit: ", value[2])
                print("\nDate of Acquisition: ", value[3])
                print("\nPreviously Rented Tenant: ", value[4])
                print("\nCurrent Tenant: ", value[5])
                print("\nPayment: ", value[6])
                print("-------------------------------------------------------")

            elif search_data == value[3]:
                print("-------------------------------------------------------")
                print("\nApartment Number: ", value[0])
                print("\nSquare Footage of Apartment: ", value[1])
                print("\nExpected Rental of the Apartment Unit: ", value[2])
                print("\nDate of Acquisition: ", value[3])
                print("\nPreviously Rented Tenant: ", value[4])
                print("\nCurrent Tenant: ", value[5])
                print("\nPayment: ", value[6])
                print("-------------------------------------------------------")

            elif search_data == value[4]:
                print("-------------------------------------------------------")
                print("\nApartment Number: ", value[0])
                print("\nSquare Footage of Apartment: ", value[1])
                print("\nExpected Rental of the Apartment Unit: ", value[2])
                print("\nDate of Acquisition: ", value[3])
                print("\nPreviously Rented Tenant: ", value[4])
                print("\nCurrent Tenant: ", value[5])
                print("\nPayment: ", value[6])
                print("-------------------------------------------------------")

            elif search_data == value[5]:
                print("-------------------------------------------------------")
                print("\nApartment Number: ", value[0])
                print("\nSquare Footage of Apartment: ", value[1])
                print("\nExpected Rental of the Apartment Unit: ", value[2])
                print("\nDate of Acquisition: ", value[3])
                print("\nPreviously Rented Tenant: ", value[4])
                print("\nCurrent Tenant: ", value[5])
                print("\nPayment: ", value[6])
                print("-------------------------------------------------------")

            elif search_data == value[6]:
                print("-------------------------------------------------------")
                print("\nApartment Number: ", value[0])
                print("\nSquare Footage of Apartment: ", value[1])
                print("\nExpected Rental of the Apartment Unit: ", value[2])
                print("\nDate of Acquisition: ", value[3])
                print("\nPreviously Rented Tenant: ", value[4])
                print("\nCurrent Tenant: ", value[5])
                print("\nPayment: ", value[6])
                print("-------------------------------------------------------")
    else:
        print("Keyword does not exist")

    while True:
        print("\n[1]Press 1 to continue search details of apartment \n[2]Press 2 to go back to admin home page ")

        choice = input("Choose your option: ")

        if choice == '1':
            search_apartment()

        elif choice == '2':
            admin_homepage()

        else:
            print("Invalid Option")

def search_tenant():
    search_data = input("Please enter the keyword you want to search: ")

    tenant_file = open("Tenant.txt", "r")
    for tenantnumber in tenant_file:
        if search_data in tenantnumber:
