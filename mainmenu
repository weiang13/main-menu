def apartment_view():
    print("-------------------------------------------")
    print("Apartment record")
    print("-------------------------------------------")

    record = 0
    with open("Apartment.txt", "r") as Apartment_file:
        for Apartment_record in Apartment_file:
            print("[", (record + 1), "]", Apartment_record.rstrip().rstrip(","))
            record += 1
    Apartment_file.close()

    while True:
        print("[1]Press 1 to view all tenant record \n[2]Press 2 to view details of current tenant "
              "\n[3]Press 3 to view details of Past Tenant \n[4]Back to Admin homepage")

        choice = input("Choose your option: ")

        if choice == '1':
            tenant_view()

        elif choice == '2':
            ctenant_view()

        elif choice == '3':
            ptenant_view()

        elif choice == '4':
            admin_homepage()

        else:
            print("Invalid Option")

