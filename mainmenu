def isNameValid(mName):
    mName = mName.strip()
    if len(mName) < 1:
        return False
    for character in mName:
        if character.isdigit():
            return False

    return True

def getName():

    name = None
    while True:
        name = input("Enter Your Name")

        if not isNameValid(name):
            print("Invalid to Input....Press any key to continue, [X] to Logout")
            choice = input("[C/X]")
            if choice == "X":
                break
            else:
                continue
    return name

